/**course_view.wxss**/
page{
  background: #f5f5f5;
  border-top: 1px solid #d5d5d5;
}
image{
  height: auto;
}
.navbar{
  background: #fff;
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}
.nav_list{
  width: 25%;
  text-align: center;
  border-right: 1px solid #d5d5d5
}
.nav_list:last-child{
  border-right: none;
}
.nav_text{
  display: inline-block;
  padding: 8rpx 40rpx;
  font-size: 28rpx;
  color: #666;
}
.nav_list.current .nav_text{
  background: #4956e0;
  color: #fff;
  border-radius: 30rpx;
}
.content_box{
  font-size: 0;
  height: 450rpx;
}
.course_video{
  width: 100%;
  height: 450rpx;
}
.course_audio{
  width: 100%;
  height: 450rpx;
}
.pic_box{
  width: 100%;
  height: 450rpx;
  font-size: 0;
}
.course_img{
  width: 100%;
  height: 450rpx;
}
.text_box{
  height: 100%;
  background: #85a5ea;
  padding: 40rpx 50rpx;
}
.text_cont{
  height: 370rpx;
  border: 1px solid #fff;
  padding: 10rpx;
}
.course_text{
  height: 100%;
  background: #fff;
  font-size: 26rpx;
  color: #666;
  padding: 30rpx;
  box-sizing: border-box;
  text-indent: 2em;
}
.course_info{
  background: #fff;
  padding: 20rpx 30rpx;
}
.course_name{
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: bold;
}
.teacher_box{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #000;
}
.teacher{
  color: #999
}

.record_box{
  background: #fff;
  margin: 30rpx 0;
}
.btn_wrap{
  padding: 40rpx 0;
}
.record_tit{
  font-size: 28rpx;
  color: #adadad;
  text-align: center;
  margin-bottom: 20px;
}
.record_btn{
  margin: 0 auto;
  font-size: 0;
  text-align: center;
}
.record_btn image{
  width: 160rpx;
}
.learned_box{
  background: #fff;
  margin: 30rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #435bfd;
  padding: 30rpx;
  font-weight: bold;
}
.learned_box image{
  display: block;
  width: 100rpx;
  margin: 0 auto 10rpx;
}
.learn_txt{
  font-size: 28rpx;
}
.view_more{
  margin-top: 30rpx;
  text-align: center;
}
.view_more text{
  color: #4956e0;
  font-size: 28rpx;
  border-bottom: 1px solid #4956e0
}
.loading_layer, .camera_layer{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: #f5f5f5;
  animation: layerFadeIn 0.5s;
}
.loading_layer{
  background: #fff;
}

.loading_icon{
  width: 150rpx;
  height: 150rpx;
  margin: 100rpx auto 0;
}
.support_icon{
  width: 350rpx;
  height: auto;
  margin: 100rpx auto 0;
  position: relative;
}

.loading_icon view{
  border: 5px solid #435bfd;
  animation: ball-clip-rotate 1.5s linear infinite;
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  border-bottom-color:transparent;
}
.icon_box{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 150rpx;
  width: 100%;
  background: #f5f5f5;
  overflow: hidden;
  animation: fadeShowIn 0.5s;
}
.support_icon image{
  width: 100%;
  height: auto;
}
.tips{
  margin-top: 40rpx;
  font-size: 40rpx;
  color: #5658c5;
  font-weight: bold;
  text-align: center;
}
.sub-tips{
  font-size: 28rpx;
  text-align: center;
  margin-top: 30rpx;
  color: #6a6a6a;
}
.layer_btn_wrap{
  display: flex;
  margin-top: 60rpx;
  justify-content: center;
}
.return_home_btn{
  width: 40%;
  margin-left: 5%;
  border: 1px solid #5c59a6;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  color: #5c59a6;
  border-radius: 10px;
  font-size: 30rpx;
  font-weight: bold;
}
.share_box{
  width: 40%;
  margin-left: 5%;
  position: relative;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}
.share_btn_bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: auto;
  z-index: -1;
}
.close_icon{
  position: absolute;
  left: 20rpx;
  top: 20px;
  width: 50rpx;
}
.close_icon image{
  width: 100%;
}

.camera_box{
  height: 100%;
}
.camera_box .time{
  padding-top: 30rpx;
  text-align: center;
  color: #fff;
}
.take_photo,.stop_photo{
  position: absolute;
  bottom: 20rpx;
  width: 100rpx;
  height: 100rpx;
  padding: 10rpx;
  left: 50%;
  margin-left: -50rpx;
  border-radius: 100%;
  z-index: 100;
}
.take_photo button{
  width: 100%;
  height: 100%;
  background: #f00;
  border-radius: 100%;
}

.speaking_layer{
  width: 300rpx;
  height: 300rpx;
  background: rgba(0,0,0,0.3);
  text-align: center;
  padding: 30rpx;
  position: fixed;
  top: 200rpx;
  left: 50%;
  margin-left: -150rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.speaking_duration{
  padding-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}
.speaking_layer image{
  width: 150rpx;
  vertical-align: middle;
  padding-top:20rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.record_layer{
  z-index: 9999;
  position: fixed;
  left: 5%;
  top: 30%;
  width: 90%;
  background: #fff;
  border: 1px solid #d6d6d6;
  border-radius: 10rpx;
}
.record_layer .title{
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  font-weight: bold;
  /* padding-left: 40rpx; */
  border-bottom: 1px solid #d6d6d6;
}
.record_layer .recording{
  margin: 0 auto;
  /* width: 80%; */
  box-sizing: border-box;
}
.record_layer .audio_cont{
  background: #4956e0;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10px;
  margin: 40rpx 60rpx;
  padding: 20rpx 20rpx;
}
.temp_audio{
  width: 100%;
  height: 150rpx;
  text-align: center;
}
.record_layer_content {
  padding: 20rpx;
}
.record_layer .voice_icon{
  width: 20rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.play_icon{
  width: 40rpx;
  float: right;
}
.temp_video{
  width: 100%;
  height: 350rpx;
}
.layer_btn_box{
  width: 100%;
  text-align: center;
  display: flex;
  border-top: 1rpx solid #d6d6d6;
}
.layer_btn_box view{
  width: 50%;
  padding: 20rpx 0;
  border-right: 1px solid #d6d6d6;
  font-size: 28rpx;
}
.layer_btn_box .main{
  color: #4956e0;
}
.layer_btn_box view:last-child{
  border-right: none;
}


.audio_wrap{
  height: 100%;
  position: relative;
}
.autio_bg{
  width: 100%;
  height: 100%;
}

.flex{
  display: flex;
}
.audioControls{
  width: 100%;
  height: 80rpx;
  background: rgba(0,0,0,0.3);
  opacity: .8;
  position: absolute;
  bottom: 0;
  color: white;
  font-size: 6pt;
  line-height: 80rpx;
  text-align: center;
}
.audioControls .bottom{
  width: 60rpx;
  height: 100%;
}
.audioControls .bottom image{
  margin-top: 24rpx;
  margin-left: 30%;
  width: 30rpx;
  height: 30rpx;
}
.audioControls .slider{
  width: 520rpx;
  height: 100%;
}
.slider slider{
  width: 95%;
  margin-left: 4%;
  margin-right: 0;
}
.audioControls .time{
  width: 120rpx;
  height: 100%;
}
.audio_control_icon{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}

.share_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 10;
  opacity: 0.7;
}
.share_layer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 270rpx;
  background: #fff;
  z-index: 100;
}
.share_layer_title{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #d6d6d6;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}
.share_layer_cont{
  display: flex;
  padding: 20rpx 0;
}
.share_layer_list{
  width: 50%;
  text-align: center;
  position: relative;
}
.share_method_icon{
  width: 100rpx;
  height: 100rpx;
}
.share_btn{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
.share_text{
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.share_fcircle_layer{
  position: fixed;
  top: 10%;
  left: 10%;
  height: 80%;
  width: 80%;
  padding-bottom: 100rpx;
  background: rgba(61, 61, 61, 0.5);
  transition: opacity 0.2s ease-in-out;
  z-index: 999;
  box-sizing: border-box;
}
.share_fcircle_layer .share_fcircle_content{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.share_fcircle_layer .footer {
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 2rpx solid #e9e9e9;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.share_fcircle_layer .footer .close {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  flex-grow: 0;
  flex-shrink: 0;
  text-align: center;
  border-left: 2rpx solid #e9e9e9;
}

.share_fcircle_layer .footer .save {
  height: 100rpx;
  line-height: 100rpx;
  flex-grow: 1;
  flex-shrink: 1;
  text-align: center;
}
.share_fcircle_layer .share_fcircle_content .share_image {
  display: inline-block;
  background: #fff;
  width: 100%;
  height: 100%;
}
.share_fcircle_mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 100;
  opacity: 0.7;
}


@-webkit-keyframes layerFadeIn {
  0% {
		opacity: 0;
  }
  100% {
		opacity: 1;
	}
}
@-webkit-keyframes ball-clip-rotate {
	0% {
		-webkit-transform: rotate(0deg);
		transform: rotate(0deg)
	}

	50% {
		-webkit-transform: rotate(180deg);
		transform: rotate(180deg)
	}

	100% {
		-webkit-transform: rotate(360deg);
		transform: rotate(360deg)
	}
}
@-webkit-keyframes fadeShowIn {
  0% {
		bottom: 100rpx;
  }
  50% {
		bottom: 100rpx;
  }
  100%{
    bottom: 150rpx;
  }
}