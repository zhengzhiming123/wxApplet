/**course_view.wxss**/
page{
  background: #f5f5f5;
  border-top: 1px solid #d5d5d5;
}
.content_box{
  font-size: 0;
  height: 450rpx;
}
.course_video{
  width: 100%;
  height: 450rpx;
}
.sharer_box{
  background: #fff;
  padding: 30rpx;
  position: relative;
  display: flex;
  align-items:center;
}
.share_avatar{
  width: 85rpx;
  height: 85rpx;
}
.share_avatar image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.sharer{
  position: relative;
  margin-left: 40rpx;
  background: #f3f3f3; 
  border-radius: 5px;
  padding: 20rpx;
  color: #686868;
  font-size: 26rpx;
  font-weight: bold;
  flex: 1;
}
.triangle{
  width: 0; 
  height: 0;
  border-width: 20rpx;
  border-style: solid;
  border-color: transparent #f3f3f3 transparent transparent;
  position: absolute;
  left: -40rpx;
  top: 50%;
  margin-top: -20rpx;
}
.sharer_text{
  margin-bottom: 5px;
}
.color_blue{
  color: #5b59d4;
}

.return_btn{
  width: 80%;
  height: 96rpx;
  line-height: 96rpx;
  margin: 40rpx auto;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  position: relative;
}
.return_btn_bg{
  width: 100%;
  position: absolute;
  left: 0;
  top:0;
  z-index: -1;
}
.support_box{
  margin-top: 60rpx;
  text-align: center;
}
.support_text{
  font-size: 28rpx;
  color: #686868
}
.support_icon{
  width: 36rpx;
  height: 36rpx;
  margin: 0 3px;
}
.enter_home{
  width: 80%;
  height: 96rpx;
  line-height: 96rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  position: relative;
  border: 1px solid #b8b8b8;
  border-radius: 30px;
}