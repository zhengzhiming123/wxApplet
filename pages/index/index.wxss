/**index.wxss**/
page{
  background: #f5f5f5
}
image{
  height: auto;
}
/*
 * 学生预览
 */
.outer_box{
  margin: 0 30rpx;
  padding-bottom: 30rpx;
}
.search_box{
  margin-top: 20rpx;
  background: #fff;
  border-radius: 10px;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #aaa;
  font-size: 24rpx;
}
.search_icon{
  width: 30rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.banner{
  margin-top: 25rpx;
  height: 340rpx;
}
.banner image{
  width: 100%;
  height: 340rpx;
  border-radius: 10px;
}

.course_box{
  margin-top: 40rpx;
}
.course_title{
  line-height: 44rpx;
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
}
.course_title .line{
  width: 4px;
  height: 40rpx;
  display: inline-block;
  background: #4956e0;
  vertical-align: top;
  margin-right: 10px;
  border-radius: 3px;
}
.course_count{
  float: right;
  font-size: 30rpx;
  color: #333;
}
.course_count .current{
  color: #4956e0;
}

.course_cont{
  margin-top: 30rpx;
}
.course_list{
  background: #fff;
  margin-bottom: 25rpx;
}
.course_pic{
  width: 100%;
  height: 308rpx;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.course_info{
  margin-top: 26rpx;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}
.section_none {
  color: #4956e0;
  float: right;
  margin-right: 20rpx;
  font-size: 30rpx;
}
.section_finish {
  color: #4956e0;
  float: right;
  margin-right: 20rpx;
  font-size: 30rpx;
}
.section_num {
  color: #333;
  float: right;
  margin-right: 20rpx;
  font-size: 30rpx;
}

.score_box{
  float: right;
  margin-right: 20rpx;
}
.star{
  width: 36rpx;
  margin-right: 5px;
}

.no_tips{
  padding: 0 20px 0; 
  margin: 20px 0; 
  line-height: 1px; 
  border-left: 180rpx solid #ddd; 
  border-right: 180rpx solid #ddd;
  text-align: center;
  font-size: 14px;
  color: #666;
}
.other_btn{
  text-align: center;
  margin-bottom: 20px;
}
.other_btn text{
  display: inline-block;
  padding: 5px 20px;
  border-radius: 10px;
  background: #6d3feb;
  color: #fff;
  font-size: 14px;
  margin: 0 auto;
}




/**
 * 游客预览
 */
.item{
  margin-top: 30rpx;
  position: relative;
  border-radius: 20rpx;
  font-size: 0;
}
.item_pic{
  width: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.course_name{
  background: #fff;
  padding: 30rpx;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.arrow_icon{
  float: right;
  width: 18rpx;
  margin-top: 6rpx;
}