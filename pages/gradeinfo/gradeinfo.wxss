/**gradeinfo.wxss**/
page{
  background: #f5f5f5;
}
image{
  height: auto;
}
.grade_head{
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.line{
  display: inline-block;
  width: 10rpx;
  height: 40rpx;
  background: #4956e0;
  border-radius: 5rpx;
  vertical-align: middle;
}
.grade_title{
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
  padding-left: 20rpx;
}

.course_box{
  margin-top: 30rpx;
  padding: 0 30rpx;
}
.course_list{
  background: #fff;
  margin-bottom: 25rpx;
}
.course_pic{
  width: 100%;
  height: 308rpx;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.course_info{
  margin-top: 26rpx;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}
.section_num{
  color: #b8b8b8;
}
.score_box{
  float: right;
  margin-right: 20rpx;
}
.star{
  width: 36rpx;
  margin-right: 5px;
}
.arrow_icon{
  float: right;
  width: 18rpx;
  margin-top: 6rpx;
  margin-right: 20rpx;
}
.nodata_tips{
  margin-top: 100rpx;
  text-align: center;
}
.nodata_tips image{
  width: 300rpx;
}