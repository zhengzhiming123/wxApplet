/**local_recording.wxss**/
page{
  background: #f5f5f5;
  border-top: 1px solid #d5d5d5
}

.box{
  margin-top: 20rpx;
  background: #fff;
  border-bottom: 1px solid #eee
}
.date{
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
  color: #000;
  border-bottom: 1px solid #e6e6e6
}
.list{
  padding: 30rpx;
  border-bottom: 1px solid #e6e6e6
}
.recording{
  display: inline-block;
  padding: 10rpx 40rpx 10rpx 20rpx;
  background: #4956e0;
  color: #fff;
  font-size: 24rpx;
  border-radius: 10px;
}
.voice_icon{
  width: 20rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.duration{
  margin-left: 20rpx;
  color: #ccc;
  font-size: 24rpx;
}
.btn_wrap{
  float: right;
  margin-top: 10rpx;
}
.play_btn{
  width: 40rpx;
}
.btn_wrap .line{
  display: inline-block;
  height: 40rpx;
  border-left: 1px solid #d8d8d8;
  margin: 0 20rpx;
}
.share_box{
  position: relative;
  display: inline-block;
  width: 40rpx;
}
.share_btn{
  width: 100%;
  height: 40rpx;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
.share_icon{
  width: 36rpx;
}
.upload_icon{
  width: 40rpx;
}
.delete_icon{
  width: 40rpx;
}