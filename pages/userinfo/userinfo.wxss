/**userinfo.wxss**/
page{
  background: #f5f5f5
}
image{
  height: auto;
}
.head{
  background: #4956e0;
  padding: 30rpx 30rpx 40rpx 30rpx;
  display: flex;
  align-items:center;
}
.avatar{
  width: 120rpx;
  border-radius: 50%;
}
.user_info{
  margin-left: 50rpx;
}
.user_name{
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  padding-top: 10rpx;
}
.telephone{
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.content{
  margin-top: 20rpx;
  background: #fff;
  padding: 0 30rpx;
}
.item{
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.item_tit{
  width: 200rpx;
  color: #000;
}
.item_val{
  flex: 1;
  color: #666;
  text-align: right;
}
.item_ipt{
  border: none;
  height: 40rpx;
  padding-right: 20rpx;
}
.info_picker{
  height: 40rpx;
}
.date_icon{
  width: 40rpx;
  vertical-align: bottom;
  margin-left: 20rpx;
}
.arrow_icon{
  width: 40rpx;
  vertical-align: bottom;
  margin-left: 20rpx;
}

.save_btn_box{
  margin: 60rpx 30rpx 0;
  position: relative;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}
.save_btn_bg{
  width: 100%;
  height: 95rpx;
  position: absolute;
  left: 0;
  top:0;
  z-index: -1;
}