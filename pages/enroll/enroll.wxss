/* pages/enroll/enroll.wxss */
page{
  background: #f6f6f6;
}
.content{
  margin: 25rpx;
  background: #fff;
  border-radius: 5px;
  padding: 0 40rpx;
}
.item{
  display: flex;
  align-items: center;
  font-size: 26rpx;
  padding: 25rpx 0;
  border-bottom: 1px solid #f5f5f5;
}
.item_tit{
  color: #000;
}
.item_val{
  flex: 1;
  margin-left: 80rpx;
  vertical-align: middle;
}
.ipt{
  width: 100%;
  font-size: 26rpx;
}
.gender_icon{
  width: 30rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}
.radio_wrap{
  margin-right: 50rpx;
}
.radio{
  transform:scale(0.7);
  margin-right: 10rpx;
  vertical-align: middle;
}
.picker{
  display: flex;
  justify-content: space-between;
}
.arrow_down{
  width: 32rpx;
}

.upFile{
  width: 144rpx;
  height: 144rpx;
  position: relative;
}
.itemImv{
  width: 100%;
  height: 100%;
}
.closeImv{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.chooseImv{
  width: 144rpx;
  height: 144rpx;
}
.upload_tip{
  margin-top: 10rpx;
  color: #959595;
  font-size: 24rpx;
}
.captcha_wrap{
  flex: 1;
  margin-left: 80rpx;
  vertical-align: middle;
  display: flex;
  align-items: center;
}
.captcha_ipt{
  flex: 1;
  margin-right: 20px;
}

.send_sms{
  color: #2c3bdb;
  font-size: 24rpx;
  height: 100%;
}
.count_down{
  font-size: 24rpx;
  color: #999;
}
.submit_btn{
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  margin: 50rpx 25rpx;
}
.btn_bg{
  width: 100%;
  height: 100rpx;
  position: absolute;
  left: 0;
  top:0;
  z-index: -1;
}

.pay_wrap{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #f5f5f5;
  z-index: 100;
}
.res_cont{
  margin: 30rpx;
  background: #fff;
  border-radius: 5px;
  text-align: center;
  padding: 30rpx 30rpx 100rpx;
}
.pay_success_icon{
  width: 320rpx;
  height: 320rpx;
  margin: 0 auto;
}
.res_text{
  margin-top: 30rpx;
  font-size:36rpx;
  text-align: center;
}
.res_btn_wrap{
  margin-top: 110rpx;
  display: flex;
  width: 100%;
}
.res_btn{
  margin: 0 25rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  font-size: 30rpx;
  width: 50%;
}
.view_order_btn{
  width: 100%;
  height: 80rpx;
}
.return_home_btn{
  margin: 0 25rpx;
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  width: 50%;
  font-size: 26rpx;
  border: 1px solid #b5b5b5;
  border-radius: 20px;
  color: #999;
}