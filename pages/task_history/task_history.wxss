/**task_history.wxss**/
page{
  background: #f5f5f5;
  border-top: 1px solid #d5d5d5;
}
image{
  height: auto;
}
.content{
  margin-top: 20rpx;
  background: #fff;
  padding-left: 40rpx;
}
.item{
  position: relative;
  padding-left: 60rpx;
}
.time_dot{
  position: absolute;
  left: -15rpx;
  top: 36rpx;
  width: 36rpx;
}
.time_line{
  position: absolute;
  left: 0;
  top: 40rpx;
  bottom: -40rpx;
  border-left: 1px solid #e3e3e3;
}
.item:last-child .time_line{
  bottom: 0;
}
.item_info{
  padding-bottom: 26rpx;
  border-bottom: 1px solid #e3e3e3
}
.date{
  font-size: 32rpx;
  color: #000;
  padding-top: 32rpx;
}
.support_icon{
  width: 30rpx;
  margin-left: 20rpx;
}
.support_num{
  font-size: 28rpx;
  color: #737373;
  margin-left: 5px;
}
.audio_box{
  margin-top: 20rpx;
  position: relative;
}
.reading_icon{
  width: 100rpx;
}
.recording{
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  padding: 10rpx 40rpx 10rpx 20rpx;
  background: #4956e0;
  color: #fff;
  font-size: 24rpx;
  border-radius: 10px;
}
.voice_icon{
  width: 20rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}
.duration{
  margin-left: 20rpx;
  color: #ccc;
  font-size: 24rpx;
}
.btn_wrap{
  bottom: 0;
  margin-right: 20rpx;
}
.btn_wrap .line{
  display: inline-block;
  height: 40rpx;
  border-left: 1px solid #d8d8d8;
  margin: 0 20rpx;
}
.play_btn{
  width: 30rpx;
  height: 30rpx;
  margin-left: 40rpx;
  vertical-align: -6rpx;
}
.btn_wrap .line{
  display: inline-block;
  height: 40rpx;
  border-left: 1px solid #d8d8d8;
  margin: 0 20rpx;
}
.share_box{
  position: relative;
  display: inline-block;
  width: 100%;
}
.share_btn{
  width: 100%;
  height: 40rpx;
  position: absolute;
  right: 20;
  top: 0;
  opacity: 0;
}
.share_icon{
  width: 36rpx;
  float: right;
  margin-top: 5rpx;
  margin-right: 40rpx;
}
.video_info{
  margin-top: 20rpx;
  position: relative;
}
.video_box{
  display: inline-block;
  width: 100%;
  /* width: 300rpx;
  height: 160rpx; */
}
.course_name{
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.course_video{
  width: 92%;
  height: 360rpx;
}
.video_wrap{
  position: relative;
}
.video_mask{
  position: absolute;
  left: 0;
  bottom: 0;
  top: 0;
  width: 92%;
  background: rgba(0, 0, 0, 0);
  text-align: center;
  z-index: 10;
}
.no-data{
  text-align: center;
  margin-top: 100rpx;
}
.no-data image{
  width: 300rpx;
}

.share_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 10;
  opacity: 0.7;
}
.share_layer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 270rpx;
  background: #fff;
  z-index: 100;
}
.share_layer_title{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #d6d6d6;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}
.share_layer_cont{
  display: flex;
  padding: 20rpx 0;
}
.share_layer_list{
  width: 50%;
  text-align: center;
  position: relative;
}
.share_method_icon{
  width: 100rpx;
  height: 100rpx;
}
.share_btn{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
.share_text{
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.share_fcircle_layer{
  position: fixed;
  top: 10%;
  left: 10%;
  height: 80%;
  width: 80%;
  padding-bottom: 100rpx;
  background: rgba(61, 61, 61, 0.5);
  transition: opacity 0.2s ease-in-out;
  z-index: 999;
  box-sizing: border-box;
}
.share_fcircle_layer .share_fcircle_content{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.share_fcircle_layer .footer {
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 2rpx solid #e9e9e9;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.share_fcircle_layer .footer .close {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  flex-grow: 0;
  flex-shrink: 0;
  text-align: center;
  border-left: 2rpx solid #e9e9e9;
}

.share_fcircle_layer .footer .save {
  height: 100rpx;
  line-height: 100rpx;
  flex-grow: 1;
  flex-shrink: 1;
  text-align: center;
}
.share_fcircle_layer .share_fcircle_content .share_image {
  display: inline-block;
  background: #fff;
  width: 100%;
  height: 100%;
}
.share_fcircle_mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 100;
  opacity: 0.7;
}