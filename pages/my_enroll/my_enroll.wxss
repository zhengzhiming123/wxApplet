/* pages/enroll/enroll.wxss */
.wrap{
  padding: 30rpx;
}
.title{
  font-size: 30rpx;
  padding-left: 20rpx;
  position: relative;
}
.title:after{
  content:'';
  width: 3px;
  height: 26rpx;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  background: #4a56e1;
}
.record{
  margin-top: 40rpx;
}
.item{
  border: 1px solid #d6d6d6;
  width: 100%;
  border-radius: 10px;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow:  0px 0px 5px 2px #d6d6d6;
}
.icon{
  width: 135rpx;
  height: 135rpx;
}
.icon_image{
  width: 100%;
  height: 100%;
}
.info{
  font-size: 26rpx;
  margin-left: 30rpx;
}
.info_tit{
  font-size: 32rpx;
  margin-top: 30rpx;
}
.level{
  margin-left: 30rpx;
}
.mb-40{
  margin-bottom: 30rpx;
}