/**index.wxss**/
image{
  height: auto;
}
.outer_box{
  border-top: 1px solid #d5d5d5
}
.logo_wrap{
  width: 50%;
  margin: 30px auto 0;
}
.login_bg{
  width: 100%;
}
.login_title{
  margin-top: 30px;
  text-align: center;
  font-size: 42rpx;
  font-weight: bold;
  color: #000;
}
.login_content{
  width: 520rpx;
  margin: 70rpx auto 0;
}
.ipt_list{
  position: relative;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #e6e6e6;
}
.login_ipt, .sms_ipt{
  font-size: 28rpx;
  padding-left: 20px;
  height: 80rpx;
}
.sms_ipt{
  width: 200rpx;
}
.send_sms{
  z-index: 2;
  position: absolute;
  right: 0;
  top: 0;
  color: #4956e0;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.count_down{
  position: absolute;
  right: 0;
  top: 0;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #999;
}
.login_btn_box{
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  margin-top: 60rpx;
}
.login_btn_bg{
  width: 100%;
  height: 80rpx;
  position: absolute;
  left: 0;
  top:0;
  z-index: -1;
}
.login_btm{
  margin-top: 50rpx;
  font-size:26rpx;
}
.forgetpwd_btn{
  color: #666;
  border-bottom: 1px solid #666;
}
.reg_btn{
  color: #4956e0;
  border-bottom: 1px solid #4956e0;
  float: right;
}