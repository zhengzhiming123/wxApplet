/**reg.wxss**/
page{
  background: #f5f5f5;
}
image{
  height: auto;
}
.reg_head image{
  width: 100%;
}
.reg_box{
  margin: 30rpx;
  background: #fff;
  border-radius: 5px;
}
.reg_title{
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
}
.reg_title .line{
  float: left;
  width: 8rpx;
  height: 30rpx;
  background: #4956e0;
  border-radius: 3px;
  margin-top: 35rpx;
  margin-right: 10px;
}
.reg_item{
  border-top: 1px solid #eee;
  height: 100rpx;
  padding-left: 25rpx;
}
.item_tit{
  font-size: 30rpx;
  color: #000;
  float: left;
  line-height: 100rpx;
}
.reg_ipt{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  margin-left: 170rpx;
}
.sms_ipt{
  width: 300rpx;
}
.date_icon{
  float: right;
  width: 40rpx;
  margin-top: 30rpx;
  margin-right: 30rpx;
}
.weak{
  color: #c0c0c0
}
.radio-group{
  margin-left: 170rpx;
  font-size: 30rpx;
  line-height: 100rpx;
}
.radio_icon{
  transform: scale(0.7)
}
.sex_icon{
  width: 36rpx;
  margin-right: 5px;
  vertical-align: middle;
}
.radio_right{
  margin-left: 50rpx;
}
.arrow_icon{
  width: 36rpx;
  float: right;
  margin-top: 30rpx;
  margin-right: 30rpx;
}

.mt_30{
  margin-top: 30rpx;
}
.pos_relative{
  position: relative;
}
.send_sms{
  position: absolute;
  right: 40rpx;
  top: 0;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #4956e0;
}
.count_down{
  position: absolute;
  right: 40rpx;
  top: 0;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #999;
}
.reg_btn_box{
  position: relative;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  margin: 60rpx 30rpx 30rpx;
}
.reg_btn_bg{
  width: 100%;
  height: 95rpx;
  position: absolute;
  left: 0;
  top:0;
  z-index: -1;
}
.reg_btn{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}