/**exhibition.wxss**/
page{
  background: #f5f5f5;
  border-top: 1px solid #d5d5d5
}
image{
  height: auto;
}
.show_hd{
  margin: 26rpx 30rpx;
}
.show_banner{
  width: 100%;
}
.content{
  margin: 0 30rpx;
}
.item{
  padding: 40rpx;
  border-bottom: 1px solid #eee;
  background: #fff;
  display: flex;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  margin-top: 25rpx;
  border-radius: 50%;
}
.info{
  margin-left: 30rpx;
  position: relative;
  flex:1;
  width: 0;
}
.info_top{
  font-size: 32rpx;
  color: #000;
}
.age{
  margin-left: 25rpx;
}
.sex_icon{
  width: 30rpx;
  margin-left: 5px;
  vertical-align: middle;
}
.info_middle{
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #999;
}
.classes{
  margin-left: 30rpx;
}
.info_bottom{
  height: 40rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
  padding-right: 125rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative
}
.ranking{
  position: absolute;
  right: 0;
  top: 0;
  width: 60rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666
}
.ranking image{
  width: 100%;
}
.btn_wrap{
  position: absolute;
  right: 0;
  top: 0;
}
.share_box{
  position: relative;
  display: inline-block;
  width: 36rpx;
}
.share_btn{
  width: 100%;
  height: 40rpx;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
.share_icon{
  width: 36rpx;
}
.btn_wrap .line{
  display: inline-block;
  height: 40rpx;
  border-left: 1px solid #d8d8d8;
  margin: 0 20rpx;
}
.video_wrap{
  display: inline-block;
  position: relative;
  width: 40rpx;
}
.play_btn{
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
}
.videoTag{
  position: absolute;
  left: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
  opacity: 0;
  z-index: -1;
}

.more_btn{
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #4a52e0;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 5px;
  margin: 50rpx auto;
}

.no-data{
  text-align: center;
  margin-top: 100rpx;
}
.no-data image{
  width: 300rpx;
}

.mask{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3)
}
.layer{
  width: 90%;
  position: fixed;
  left: 5%;
  top: 300rpx;
  background: #fff;
  border: 1px solid #d6d6d6;
}
.layer_videos{
  width: 100%;
  height: 300rpx;
}
.layer_audio{
  width: 100%;
  height: 150rpx;
  text-align: center;
  margin-top: 40rpx;
}
.layer-btn{
  border-top: 1px solid #d6d6d6;
  margin-top: 20rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.videoTag{
  display: -none;
}

.share_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 10;
  opacity: 0.7;
}
.share_layer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 270rpx;
  background: #fff;
  z-index: 100;
}
.share_layer_title{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #d6d6d6;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}
.share_layer_cont{
  display: flex;
  padding: 20rpx 0;
}
.share_layer_list{
  width: 50%;
  text-align: center;
  position: relative;
}
.share_method_icon{
  width: 100rpx;
  height: 100rpx;
}
.share_btn{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
.share_text{
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.share_fcircle_layer{
  position: fixed;
  top: 10%;
  left: 10%;
  height: 80%;
  width: 80%;
  padding-bottom: 100rpx;
  background: rgba(61, 61, 61, 0.5);
  transition: opacity 0.2s ease-in-out;
  z-index: 999;
  box-sizing: border-box;
}
.share_fcircle_layer .share_fcircle_content{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.share_fcircle_layer .footer {
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 2rpx solid #e9e9e9;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.share_fcircle_layer .footer .close {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  flex-grow: 0;
  flex-shrink: 0;
  text-align: center;
  border-left: 2rpx solid #e9e9e9;
}

.share_fcircle_layer .footer .save {
  height: 100rpx;
  line-height: 100rpx;
  flex-grow: 1;
  flex-shrink: 1;
  text-align: center;
}
.share_fcircle_layer .share_fcircle_content .share_image {
  display: inline-block;
  background: #fff;
  width: 100%;
  height: 100%;
}
.share_fcircle_mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 100;
  opacity: 0.7;
}

.audio_cont{
  background: #4956e0;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10px;
  margin: 60rpx;
  padding: 20rpx 20rpx;
}
.voice_icon{
  width: 20rpx;
  margin-right: 20rpx;
  float: right;
  margin-top: 4rpx;
}