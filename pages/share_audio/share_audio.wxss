/**course_view.wxss**/
page{
  background: #f5f5f5;
  border-top: 1px solid #d5d5d5;
}
image{
  height: auto;
}
.content_box{
  font-size: 0;
  height: 450rpx;
}
.course_video{
  width: 100%;
  height: 450rpx;
}
.sharer_box{
  background: #fff;
  padding: 30rpx;
  position: relative;
  display: flex;
  align-items:center;
}
.share_avatar{
  width: 85rpx;
  height: 85rpx;
}
.share_avatar image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.sharer{
  position: relative;
  margin-left: 40rpx;
  background: #f3f3f3; 
  border-radius: 5px;
  padding: 20rpx;
  color: #686868;
  font-size: 26rpx;
  font-weight: bold;
  flex: 1;
}
.triangle{
  width: 0; 
  height: 0;
  border-width: 20rpx;
  border-style: solid;
  border-color: transparent #f3f3f3 transparent transparent;
  position: absolute;
  left: -40rpx;
  top: 50%;
  margin-top: -20rpx;
}
.sharer_text{
  margin-bottom: 5px;
}
.color_blue{
  color: #5b59d4;
}

.return_btn{
  width: 80%;
  height: 96rpx;
  line-height: 96rpx;
  margin: 40rpx auto;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  position: relative;
}
.return_btn_bg{
  width: 100%;
  position: absolute;
  left: 0;
  top:0;
  z-index: -1;
}
.support_box{
  margin-top: 60rpx;
  text-align: center;
}
.support_text{
  font-size: 28rpx;
  color: #686868
}
.support_icon{
  width: 36rpx;
  height: 36rpx;
  margin: 0 3px;
}
.enter_home{
  width: 80%;
  height: 96rpx;
  line-height: 96rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  position: relative;
  border: 1px solid #b8b8b8;
  border-radius: 30px;
}

.audio_wrap{
  height: 100%;
  position: relative;
}
.autio_bg{
  width: 100%;
  height: 100%;
}


.flex{
  display: flex;
}
.audioControls{
  width: 100%;
  height: 80rpx;
  background: rgba(0,0,0,0.3);
  opacity: .8;
  position: absolute;
  bottom: 0;
  color: white;
  font-size: 6pt;
  line-height: 80rpx;
  text-align: center;
}
.audioControls .bottom{
  width: 60rpx;
  height: 100%;
}
.audioControls .bottom image{
  margin-top: 24rpx;
  margin-left: 30%;
  width: 30rpx;
  height: 30rpx;
}
.audioControls .slider{
  width: 520rpx;
  height: 100%;
}
.slider slider{
  width: 95%;
  margin-left: 4%;
  margin-right: 0;
}
.audioControls .time{
  width: 120rpx;
  height: 100%;
}
.audio_control_icon{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
}

.support_box{
  margin-top: 60rpx;
  text-align: center;
}
.support_wrap{
  display: inline-block;
  border-radius: 40rpx;
  margin: 0 auto;
  text-align: center;
  padding: 20rpx 100rpx;
  background: #e9e9e9;
  color: #bbbbbb;
}
.support_wrap.active{
  color: #fff;
  background: #6741e9;
}

.support_wrap image{
  width: 60rpx;
  height: 60rpx;
}

.support-text{
  font-size: 28rpx;
  position: relative;
}
.add-one{
  position: absolute;
  right: -20rpx;
  top: 0;
  color: #fff;
  font-size: 24rpx;
  opacity: 0;
}
.add-one.show{
  animation: showSupport 1s ease
}
@-webkit-keyframes showSupport
{
  0% {top: 0;opacity: 0;}
  60%{opacity: 1;}
  100% {top: -30rpx;opacity: 0;}
}
@keyframes showSupport
{
  0% {top: 0;opacity: 0;}
  60%{opacity: 1;}
  100% {top: -30rpx;opacity: 0;}
}